{
  "name": "allthingslinux",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev --turbo",
    "turbo": "next dev --turbo",
    "build": "TURBO=0 next build",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "check:mdx": "remark content/blog/*.mdx --quiet",
    "check:ts": "tsc --noEmit",
    "build:content": "contentlayer2 build",
    "open-next:build": "contentlayer2 build && NODE_VERSION=20 TURBO=0 open-next build",
    "cloudflare:build": "NODE_VERSION=20 npm run open-next:build && NODE_VERSION=20 npx @opennextjs/cloudflare",
    "cloudflare:dev": "NODE_VERSION=20 npm run open-next:build && NODE_VERSION=20 npx @opennextjs/cloudflare && wrangler dev",
    "cloudflare:deploy": "NODE_VERSION=20 npm run open-next:build && NODE_VERSION=20 npx @opennextjs/cloudflare && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv cloudflare-env.d.ts"
  },
