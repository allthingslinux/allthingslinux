{
  "name": "allthingslinux",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "22.14.0"
  },
  "scripts": {
    "dev": "next dev",
    "turbo": "next dev --turbo",
    "dev:wrangler": "wrangler dev --config wrangler.local.jsonc",
    "trigger:dev": "node scripts/trigger-dev.mjs dev",
    "dev:all": "concurrently \"npm:dev\" \"npm:dev:wrangler\" \"npm:trigger:dev\"",
    "build:coc": "node scripts/generate-code-of-conduct.mjs",
    "build:content": "contentlayer2 build",
    "build:next": "next build",
    "build:opennext": "npx @opennextjs/cloudflare build",
    "build": "next build",
    "deploy:opennext:dev": "npx @opennextjs/cloudflare deploy -- --config wrangler.dev.jsonc --env development",
    "deploy:opennext:prod": "npx @opennextjs/cloudflare deploy -- --config wrangler.production.jsonc --env production",
    "deploy:dev": "npm run build && npm run deploy:opennext:dev",
    "deploy:prod": "npm run build && npm run deploy:opennext:prod",
    "deploy": "npm run deploy:prod",
    "preview:built": "npm run build && npx @opennextjs/cloudflare preview -- --config wrangler.local.jsonc",
    "start": "next start",
    "lint": "eslint .",
    "format": "prettier --write .",
    "check": "npm run check:ts && npm run check:format && npm run check:mdx",
    "check:format": "prettier --check .",
    "check:mdx": "remark content/blog/*.mdx --quiet",
    "check:ts": "tsc --noEmit",
    "populate-cache:local": "npx @opennextjs/cloudflare populateCache local",
    "populate-cache:remote": "npx @opennextjs/cloudflare populateCache remote",
    "cf-typegen": "wrangler types --config wrangler.local.jsonc --env-interface CloudflareEnv cloudflare-env.d.ts",
    "secrets:dev": "bash scripts/secrets.sh development",
    "secrets:prod": "bash scripts/secrets.sh production",
    "trigger:deploy": "node scripts/trigger-dev.mjs deploy"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@mdx-js/loader": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@mondaydotcomorg/api": "^10.0.5",
    "@next/mdx": "^15.3.4",
    "@next/third-parties": "^15.3.4",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@stepperize/react": "^5.1.6",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@tabler/icons-react": "^3.34.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@trigger.dev/sdk": "4.0.0-v4-beta.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "contentlayer2": "^0.5.8",
    "date-fns": "^4.1.0",
    "embla-carousel-auto-scroll": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "globals": "^16.2.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "lucide-react": "^0.525.0",
    "next": "^15.3.4",
    "next-contentlayer2": "^0.5.8",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250628.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.30.0",
    "@opennextjs/aws": "^3.6.6",
    "@opennextjs/cloudflare": "^1.3.1",
    "@svgr/webpack": "^8.1.0",
    "@trigger.dev/build": "4.0.0-v4-beta.21",
    "@types/eslint": "^9.6.1",
    "@types/mdx": "^2.0.13",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webpack": "^5.28.5",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "concurrently": "^9.2.0",
    "eslint-config-next": "^15.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-mdx": "^3.5.0",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier-eslint": "^16.4.2",
    "remark-cli": "^12.0.1",
    "tailwindcss": "^4.1.11",
    "ts-node": "^10.9.2",
    "typescript-eslint": "^8.35.0",
    "wrangler": "^4.22.0"
  }
}
