# Public variables (available in browser)
# These variables will be exposed to the client-side code
NEXT_PUBLIC_URL=http://localhost:8788
NEXT_PUBLIC_API_URL=http://localhost:8788/api
NEXT_PUBLIC_GITHUB_REPO_OWNER=allthingslinux
NEXT_PUBLIC_GITHUB_REPO_NAME=applications

# Private variables (server-side only)
# These variables are only available in server-side code and API routes
# DO NOT prefix these with NEXT_PUBLIC_ as they contain sensitive information
GITHUB_TOKEN=
MONDAY_API_KEY=
MONDAY_BOARD_ID=
DISCORD_WEBHOOK_URL=

# Development settings
SKIP_ENV_VALIDATION=true
NODE_ENV=development

# For local development, create a .env.local file with the values for your environment
# For production, set these variables in Cloudflare dashboard and/or wrangler.toml
